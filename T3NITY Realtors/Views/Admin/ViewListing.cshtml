@model ListingsViewModel


<div class="container" aling="center">

    <div class="col-md-10 mx-auto py-4">
        <div class="card">
            <div class="card-header bg-primary text-uppercase text-white">
                <h4>New Property Details</h4>
            </div>
            <form asp-action="AddMessage">

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" readonly />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" readonly />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                <select asp-for="Type" class="form-control" readonly>
                                    <option value="">Choose Type</option>
                                    <option value="Rent">Rent</option>
                                    <option value="Sale">Sale</option>
                                    <option value="Lease">Lease</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ListingCategory" class="control-label"></label>
                                <select asp-for="ListingCategory" class="form-control" readonly>
                                    <option value="">Choose Listing Category</option>
                                    <option value="Self_Contain">Self_Contain</option>
                                    <option value="Mini_Flat">Mini_Flat</option>
                                    <option value="Bedroom2_Apartment">Bedroom2_Apartment</option>
                                    <option value="Bedroom3_Apartment">Bedroom3_Apartment</option>
                                    <option value="Bungalow">Bungalow</option>
                                    <option value="Duplex">Duplex</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" readonly />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ContactInfo" class="control-label"></label>
                                <input asp-for="ContactInfo" class="form-control" readonly />
                                <span asp-validation-for="ContactInfo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Available" type="checkbox" readonly>
                                    <label class="form-check-label">This property is still Available.   </label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <h5 class="mt-3">Property Images</h5>
                    <hr />

                    <div class="row row-cols-4 mt-2">
                        @foreach (var item in Model.ListingImages)
                        {
                            <div class="col">
                                <img src="data:image;base64,@(Convert.ToBase64String(item.FileByte))" style="width: 250px;" />
                            </div>

                        }
                    </div>

                    <hr />
                    <h5 class="mt-3">Add a Comment</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AdminMessage" class="control-label"></label>
                                <textarea asp-for="AdminMessage" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="AdminMessage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="Update" class="btn btn-md btn-primary rounded-0 text-uppercase" />
            </form>

            <div class="form-group mt-2">
                <a class="btn btn-md btn-success rounded-0 text-uppercase bgBtn"> Approve</a>
                <a class="btn btn-md btn-danger rounded-0 text-uppercase bgBtn"> Reject</a>
                <a class="btn btn-md btn-warning rounded-0 text-uppercase bgBtn"> Suspend </a>
                <a asp-action="Dashboard" class="btn btn-md btn-primary rounded-0 text-uppercase mt-1">
                    <i class="fas fa-less-than"> </i> Back
                </a>
            </div>
        </div>
    </div>
</div>

</div>
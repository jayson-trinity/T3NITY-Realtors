@model IEnumerable<ListingsViewModel>
<div class="container" aling="center">


    <div class="row row-cols-4">
        @{
            foreach (var item in Model)
            {
                <div class="col">
                    <div class="card mb-5 pb-1">
                        <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(item.DefaultImages.FileByte))" alt="Listing Image" style="height:250px;">
                        <div class="card-body">
                            <h6 class="card-title clapTxt">@item.Name</h6>
                            <div class="row">
                                <div class="col-6">
                                    <span class=" text-monospace text-success"> <b>@item.Type</b></span>

                                </div>

                                <div class="col-6">
                                    <span class="d-flex justify-content-end text-monospace text-success"> <b> ₦@(String.Format("{0:0,0.00}", item.Price))</b></span>
                                </div>
                            </div>

                            <p class="clapTxt">
                                <i class="	fas fa-map-marked"></i>
                                @item.Address
                            </p>

                            <p class="p-0 m-0 clapBigTxt">@item.Description</p>

                            <div class="d-flex justify-content-end mt-1">
                                <a href="#" class="btn btn-primary">View More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }


    </div>

</div>